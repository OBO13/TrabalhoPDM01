<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Teste1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn2" android:onClick="btn1"/>
    <Button
            android:text="TESTE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btn3"/>
    <Button
            android:text="TESTE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/btnverificar"/>
    <Button
            android:text="VERIFICAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnverificar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Daltonismo é uma perturbação da percepção visual caracterizada pela incapacidade de diferenciar todas ou algumas cores. Manifesta-se muitas vezes pela dificuldade de distinguir o verde do vermelho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="26dp" android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="O que é?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="26dp" android:id="@+id/textView2" android:textSize="24sp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="Faça o teste!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="26dp" android:id="@+id/textView3" android:textSize="30sp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/btn1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Resposta_1"
            android:ems="10"
            android:id="@+id/resp_1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/resp2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Resposta_2"
            android:ems="10"
            android:id="@+id/resp2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/resp3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Resposta_3"
            android:ems="10"
            android:id="@+id/resp3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/result"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Resultado_do_teste"
            android:ems="10"
            android:id="@+id/result" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>